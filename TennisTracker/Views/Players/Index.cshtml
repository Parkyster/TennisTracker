@using Microsoft.Ajax.Utilities
@model TennisTracker.Models.PlayersWithWinLoss


<!DOCTYPE html>

<html>
  <head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Welcome to Tennis Tracker</title>

    <!-- Bootstrap Core CSS -->
    <link href="/Content/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="/Content/simple-sidebar.css" rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#">
                        Menu
                    </a>
                </li>
                <li><a>@Html.ActionLink("Players", "Index", "Players")"></a>
                </li>
                
                <li>
                    <a href="#">Singles Match Results</a>
                </li>
                <li>
                    <a href="#">Doubles Match Results</a>
                </li>
                <li>
                    <a href="#">Venues</a>
                </li>
                <li>
                    <a href="#">Leaderboard</a>
                </li>
                <li>
                    <a href="#">Contact</a>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1>Players</h1>
                        <p style="clear:both" class="col-sm-offset-0"></p>
                        @foreach (var item in @Model.Players)
                        {

                            <ul id="Players" class="bg-success"></ul>
                            <br/>
                            <h3>Name - @Html.DisplayFor(@modelItem => item.Name)</h3>
                            <li>Sex - @Html.DisplayFor(@modelItem => item.Sex)</li>
                            <li>Plays - @Html.DisplayFor(@modelItem => item.Plays)</li>
                            <li>Favourite Surface - @Html.DisplayFor(@modelItem => item.FavouriteSurface)</li>

                            foreach (var key in @Model.WinLoss)
                            {
                                if (key.ContainsKey(item.PlayerId))
                                {
                                    <li>Played / Won - @key.FirstOrDefault().Value</li>
                                }
                            }

                            

                        }
                        
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>

</body>

</html>